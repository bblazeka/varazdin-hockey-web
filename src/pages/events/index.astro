---
import BaseLayout from "../../layouts/BaseLayout.astro";
import PageHeader from "../../components/Sections/PageHeader.astro";
import Card from "../../components/UI/Card.astro";
import { getCollection } from "astro:content";
import { formatDate, isFutureDate, isPastDate } from "../../utils/dateUtils";

// Get all events
const allEvents = await getCollection("events", ({ data }) => {
  return import.meta.env.PROD ? !data.draft : true;
});

// Separate upcoming and past events
const upcomingEvents = allEvents.filter(event => isFutureDate(event.data.date))
                            .sort((a, b) => new Date(a.data.date).getTime() - new Date(b.data.date).getTime());

const pastEvents = allEvents.filter(event => isPastDate(event.data.date))
                        .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
                        .slice(0, 6); // Show only the most recent past events
---

<BaseLayout
  title="Događaji - IHK Varaždin"
  description="Pratite nadolazeće i prošle događaje IHK Varaždina. Turniri, proslave iSpecijalni događaji."
>
  <PageHeader
    title="Događaji"
    subtitle="Turniri, proslave i posebni događaji"
    backgroundImage="/uploads/ledeni_pak_2024.jpg"
  />

  <!-- Upcoming Events -->
  <section class="py-16">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Nadolazeći događaji</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Pridružite nam se na nadolazećim događajima i turnirima
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {upcomingEvents.map((event) => (
          <Card
            title={event.data.title}
            image={{
              src: event.data.image,
              alt: event.data.title
            }}
            href={`/events/${event.slug}`}
          >
            <div class="mb-3 flex items-center text-gray-600">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <span>{formatDate(event.data.date)}</span>
            </div>
            
            {event.data.time && (
              <div class="mb-3 flex items-center text-gray-600">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span>{event.data.time}</span>
              </div>
            )}
            
            <div class="mb-3 flex items-center text-gray-600">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <span>{event.data.location}</span>
            </div>
            
            <p class="text-gray-700 mb-4">{event.data.summary}</p>
            
            <p class="text-primary-600 font-medium group-hover:underline group-hover:text-primary-700">
              Saznaj više →
            </p>
          </Card>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Past Events -->
  <section class="py-16 bg-gray-50">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Prošli događaji</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Pogledajte neke od naših nedavnih događaja
        </p>
      </div>
      
      {
        pastEvents.length > 0 ? (
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {pastEvents.map((event) => (
              <Card
                title={event.data.title}
                image={{
                  src: event.data.image,
                  alt: event.data.title
                }}
                href={`/events/${event.slug}`}
                className="opacity-90 hover:opacity-100"
              >
                <div class="mb-3 flex items-center text-gray-600">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  <span>{formatDate(event.data.date)}</span>
                </div>
                
                <div class="mb-3 flex items-center text-gray-600">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  <span>{event.data.location}</span>
                </div>
                
                <p class="text-gray-700 mb-4">{event.data.summary}</p>

                <p class="text-primary-600 font-medium group-hover:underline group-hover:text-primary-700">
                  Pogledaj detalje →
                </p>
              </Card>
            ))}
          </div>
        ) : (
          <div class="text-center py-12 bg-white rounded-lg shadow-sm">
            <p class="text-gray-600">Nema prošlih događaja za prikaz.</p>
          </div>
        )
      }
    </div>
  </section>
  
  <!-- Link to Schedule -->
  <section class="py-20 bg-primary-600">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6 text-white">Želiš vidjeti raspored?</h2>
        <p class="text-xl text-white/90 mb-8">
          Pogledaj raspored treninga i utakmica kako bi znao kada se možeš pridružiti timu ili doći navijati.
        </p>

        <a
          href="/schedule"
          class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-primary-600 bg-white rounded-md shadow-sm hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-primary-600 transition-colors"
        >
          Pogledaj raspored
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
