---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroSection from "../components/Sections/HeroSection.astro";
import EventList from "../components/Sections/EventList.astro";
import NextGame from "../components/Sections/NextGame.astro";
import Button from "../components/UI/Button.astro";

// Sponsors list
const sponsors = [
  { name: "Glaz", logo: "/uploads/sponsors/glaz-logo-new.png", url: "https://glaz.hr/", darkBg: false },
  { name: "Gloria", logo: "/uploads/sponsors/Gloria_logo.png", url: "https://www.instagram.com/gloria_cafe_bar/", darkBg: true },
  { name: "Marlex", logo: "/uploads/sponsors/marlex.png", url: "https://marlex.hr", darkBg: false },
  { name: "Pokos", logo: "/uploads/sponsors/Pokos.jpg", url: "https://www.ograde-pokos.hr/", darkBg: false },
  { name: "Schwabos", logo: "/uploads/sponsors/schwabos.png", url: "https://www.schwabos.com/", darkBg: false },
  { name: "Sportska Petica", logo: "/uploads/sponsors/sportska_5ica.png", url: "https://www.instagram.com/sportska5ica/", darkBg: false },
  { name: "Tvornica Leda", logo: "/uploads/sponsors/TVORNICALEDA.png", url: "https://tvornicaleda.hr/", darkBg: false },
];
---

<BaseLayout>
  <HeroSection
    title="IHK Varaždin"
    subtitle="Tradicija, strast i duh hokeja u Varaždinu"
    backgroundImage="/uploads/events/ledeni-pak-2025.jpg"
    ctaText="Raspored"
    ctaLink="/schedule"
    secondaryCtaText="Vijesti"
    secondaryCtaLink="/news"
  />

  <NextGame />

  <!-- About Section -->
  <section class="py-16 bg-gray-50">
    <div class="container">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div>
          <img
            src="/uploads/team_photo_sisak.jpg"
            alt="IHK Varaždin"
            class="rounded-lg shadow-lg object-cover w-full h-full"
          />
        </div>

        <div>
          <h2 class="text-3xl md:text-4xl font-bold mb-6">O klubu</h2>
          <p class="text-gray-700 mb-6 text-lg">
            IHK Varaždin je hokejaški klub s dugom tradicijom u gradu Varaždinu. Kroz godine gradimo snažnu zajednicu igrača, navijača i ljubitelja hokeja koji dijele strast prema ovom sportu.
          </p>
          <p class="text-gray-700 mb-8 text-lg">
            Naš cilj je promicati hokej u regiji, razvijati mlade talente i pružiti kvalitetan sportski sadržaj našoj zajednici. Pridruži nam se na ledu ili na tribinama!
          </p>

          <Button href="/about-us">
            Saznaj više o nama
          </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Events Section -->
  <EventList />

  <!-- Call to Action -->
  <section
    class="py-20 bg-cover bg-center text-white"
    style="background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url(/uploads/ice-rink-bg.webp)"
  >
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6 text-white">Pridruži nam se!</h2>
        <p class="text-xl mb-8">
          Želiš li postati dio IHK Varaždina? Tražimo nove igrače svih dobnih skupina i nivoa iskustva.
        </p>

        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-8 mb-8 text-left">
          <h3 class="text-2xl font-bold mb-4 text-white">Kako se pridružiti:</h3>
          <ul class="space-y-3 text-lg">
            <li class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span><strong>Kontaktiraj nas:</strong> Pošalji nam poruku putem kontakt obrasca ili nazovi na +385 91 887 2820</span>
            </li>
            <li class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span><strong>Dođi na trening:</strong> Treninzi se održavaju u Ledenoj dvorani Varaždin</span>
            </li>
            <li class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span><strong>Upoznaj tim:</strong> Naši treneri će ti pomoći pronaći pravu ekipu za tvoj nivo</span>
            </li>
          </ul>
        </div>

        <div class="flex flex-wrap justify-center gap-4">
          <Button href="/contact" variant="primary" size="lg">
            Kontaktiraj nas
          </Button>

          <Button href="/schedule" variant="outline" size="lg" class="bg-white/10 text-white border-white hover:bg-white hover:text-gray-900 backdrop-blur-sm">
            Pogledaj raspored
          </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Sponsors Section -->
  <section class="py-12 bg-gray-50">
    <div class="container">
      <h2 class="text-3xl font-bold text-center mb-8 text-gray-800">Naši sponzori</h2>

      <div class="flex flex-wrap justify-center gap-6 max-w-5xl mx-auto">
        {sponsors.map((sponsor) => (
          <a
            href={sponsor.url}
            target="_blank"
            rel="noopener noreferrer"
            class={`flex items-center justify-center p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow w-48 ${sponsor.darkBg ? 'bg-black' : 'bg-white'}`}
          >
            <img
              src={sponsor.logo}
              alt={sponsor.name}
              class="max-h-20 w-auto object-contain grayscale hover:grayscale-0 transition-all"
            />
          </a>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>