                <h3 class="text-xl font-bold mb-1">Email</h3>
                <p class="text-gray-700">
                  <a href="mailto:ihkvarazdin@gmail.com" class="hover:text-primary-600">
                    ihkvarazdin@gmail.com
                  </a>
                </p>
              </div>
            </div>
          </div>

          <!-- Social Media Links -->
          <div class="mt-8">
            <h3 class="text-xl font-bold mb-4">Pratite nas</h3>
            <div class="flex space-x-4">
              <a href="https://www.facebook.com/profile.php?id=100041813816290" target="_blank" rel="noopener noreferrer" class="text-gray-600 hover:text-primary-600 transition-colors">
                <span class="sr-only">Facebook</span>
